{{#if entitiesThatExistInTS.length}}
  <h1 class="p-title">
    {{fa-icon "info-circle" size="sm"}} Found IOCs
  </h1>
  <div class="note">
    <span class="p-key">
      <span class="p-value"><em><b>DANGER:</b></em></span> Deleting an indicator cannot be undone.
    </span>
  </div>
  <table class="w-100">
    <tbody>
      {{#each entitiesThatExistInTS as |intel|}}
        <tr>
          <td>
            <a href="{{details.url}}/detail/{{intel.type}}/{{intel.value}}">{{intel.value}} {{fa-icon "external-link" fixedWidth=true class="external-link-icon"}}</a>
          </td>
          <td class="type">
            <span>{{intel.type}}</span>
          </td>
          <td class="icon">
            <span class="delete" {{action "deleteItem" intel}}>{{fa-icon "trash" fixedWidth=true}}</span>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <hr class="mt-2 mb-0">
  <div class="d-flex flex-row justify-content-between align-items-center">
    <div>
      {{#if deleteIsRunning}}
        {{fa-icon "spinner-third" fixedWidth=true spin=true}} Deleting...
      {{/if}}
    </div>

    {{#if deleteMessage}}
      <div class="alert alert-info mt-1">
        {{deleteMessage}}
      </div>
    {{/if}}
    {{#if deleteErrorMessage}}
      <div class="alert alert-danger mt-1">
        {{deleteErrorMessage}}
      </div>
    {{/if}}
  </div>
{{/if}}
{{#if notFoundEntities}}
    <h1 class="p-title">
      {{fa-icon "sparkles" size="sm" fixedWidth=true}} New IOCs
    </h1>
    <table class="w-100">
      <tbody>
        {{#each newIocs as |entity|}}
          <tr>
            <td>
              <span>{{entity.value}}</span>
            </td>
            <td class="type">
              <span>{{entity.type}}</span>
            </td>
            <td class="icon">
              <span class="add" {{action "addSubmitItem" entity}}>{{fa-icon "plus" fixedWidth=true}}</span>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>

  {{#if (not newIocs.length)}}
    <div class="note">
      <span class="p-key"><em>NONE</em></span>
    </div>
  {{/if}}
  <h1 class="p-title">
    {{fa-icon "upload" size="sm" fixedWidth=true}} New IOCs to Submit
  </h1>
  <table class="w-100">
    <tbody>
      {{#each newIocsToSubmit as |entity|}}
        <tr>
          <td class="intellValue">
            <span>{{entity.value}}</span>
          </td>
          <td class="type">
            <span>{{entity.type}}</span>
          </td>
          <td class="icon">
            <span class="delete" {{action "removeSubmitItem" entity}}>{{fa-icon "minus" fixedWidth=true}}</span>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
    {{#if (not newIocsToSubmit.length)}}
      <div class="note">
        <span class="p-key"><em>NONE</em></span>
      </div>
    {{/if}}
      <h1 class="p-title py-1">
        {{fa-icon "cog" size="sm" fixedWidth=true}} Submission Options
      </h1>
    <div>
      <label>
        {{input
          type="checkbox"
          checked=isPublic
          disabled=createIsRunning
        }}
        <span class="align-top">Submit as Public</span>
      </label>
    </div>
    <div>
      <label>
        {{input
          type="checkbox"
          checked=isAnonymous
          disabled=createIsRunning
        }}
        <span class="align-top">Is Anonymous</span>
      </label>
    </div>
    <div>
      <label>
        {{input
          type="checkbox"
          checked=manuallySetConfidence
          disabled=createIsRunning
        }}
        <span class="align-top">Manually Set Confidence</span>
      </label>
    </div>
    {{#if manuallySetConfidence}}
      <div class="py-1">
        <span class="p-key">Confidence: </span>
        <span class="p-value">{{submitConfidence}}</span>
        <div>
          <input
            type="range"
            class="w-100 py-1"
            oninput={{action (mut submitConfidence) value="target.value"}}
            min="0"
            max="100"
            value={{submitConfidence}}
            steps="1"
          />
        </div>
      </div>
    {{/if}}
      <div class="selectContainer py-1">
        <span class="p-value">TLP: </span>
        <select class="w-100" onchange={{action (mut TLP) value="target.value"}}>
            <option value="red">Red</option>
            <option value="amber">Amber</option>
            <option value="green">Green</option>
            <option value="white">White</option>
        </select>
      </div>
      <div class="selectContainer">
        <span class="p-value">Severity: </span>
        <select class="w-100" onchange={{action (mut submitSeverity) value="target.value"}}>
            <option value="low">Low</option>
            <option value="medium">Medium</option>
            <option value="high">High</option>
            <option value="very-high">Very High</option>
        </select>
      </div>
      <div class="selectContainer">
        <span class="p-value">Threat Type: </span>
        <select class="w-100" onchange={{action (mut submitThreatType) value="target.value"}}>
          {{#each threatTypes as |threatType|}}
            <option value="{{threatType.type}}">{{threatType.name}}</option>
          {{/each}}
        </select>
      </div>

      <div class="tag-container">
        <h1 class="p-title">
          {{fa-icon "tags" fixedWidth=true}} Tags
        </h1>
        {{#each (limit selectedTags maxTagsInBlock) as |tag tagIndex|}}
          <a href="{{details.url}}/search?status=active&tags={{tag}}" class="tag">
            {{tag.name}}
            <button class="tag-btn delete-tag-btn" {{action "deleteTag" tag}}>
              {{fa-icon "times" fixedWidth=true}}
            </button>
          </a>
        {{/each}}

        <div class="edit-tags-btn-container">
          <span class="p-action" {{action "editTags"}}>Add Tags {{fa-icon (if editingTags "caret-up" "caret-down") fixedWidth=true}}</span>
        </div>

        {{#if editingTags}}
          <div class="edit-tags-container">
            <div class="edit-visibility-container">
              {{#power-select
                options=tagVisibility
                selected=selectedTagVisibility
                searchEnabled=false
                searchField="name"
                placeholder="Visibility"
                onChange=(action (mut selectedTagVisibility)) as |visibility|}}
                {{visibility.name}}
              {{/power-select}}
            </div>
            <div class="input-group add-tag-container">
              {{#power-select
                triggerClass="form-control"
                selected=selectedTag
                options=existingTags
                searchEnabled=true
                search=(action "searchTags")
                placeholder="Add Tag"
                searchField="name"
                searchMessage="Loading Tags ..."
                searchPlaceholder="Search tags"
                closeOnSelect=true
                onOpen=(action "searchTags" '')
                onChange=(action (mut selectedTag)) as |tag|
              }}
                {{tag.name}}
                {{#if tag.isNew}}
                    {{fa-icon "plus-circle" fixedWidth=true}}
                {{else}}
                    {{fa-icon "check-circle" fixedWidth=true}}
                {{/if}}
              {{/power-select}}

              <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" {{action "addTag"}}>
                  {{fa-icon "plus" fixedWidth=true}}
                </button>
              </div>
            </div>
          </div>
        {{/if}}
      </div>

    <div class="d-flex flex-row-reverse justify-content-between align-items-center mt-2">
      <button {{action "submitItems"}}
              disabled={{createIsRunning}}
              class="p-btn btn btn-secondary m-0">
        {{#if createIsRunning}}
          {{fa-icon "spinner-third" fixedWidth=true spin=true}}
        {{else}}
          Submit IOCs
        {{/if}}
      </button>

      {{#if createMessage}}
        <div class="alert alert-info m-0">
          {{createMessage}} This is a message
        </div>
      {{/if}}

      {{#if createErrorMessage}}
        <div class="alert alert-danger m-0">
          {{createErrorMessage}}
        </div>
      {{/if}}
    </div>
{{/if}}